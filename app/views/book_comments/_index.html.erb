        <table>
           <% book.book_comments.each do |book_comment| %>
            
              <tr>
                <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallbach: "no-image-icon.jpg") %></td>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>
              </tr>
                <% if book_comment.user == current_user %>
                  <td class="comment-delete">
                    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-danger mb-5' %>
                  </td>
                <% end %>
              
            <% end  %>
        </table>